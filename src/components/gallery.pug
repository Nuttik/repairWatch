mixin gallery(modifier, paht, extension, count)
  div(class='gallery' class= "gallery_" + modifier)
    div(class= "gallery__wrapper")
      ul.gallery__items-list
        - var n = 1;
          while n <= count
            li.gallery__item
              img(src= paht + n + extension, alt="photo-" + n++)
    div.gallery__tools
      - var i = 1;
          while i <= count
            input(type="radio" name="gallery__radio-"+modifier id=modifier+"__radio-"+i).gallery__radio
            label(for=modifier+"__radio-"+i).gallery__indicator
            <br>
             - i++